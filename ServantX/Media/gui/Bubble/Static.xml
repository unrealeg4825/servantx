<?xml version="1.0" encoding="ANSI"?>
<AlbaLynx>
	<!-- =========================================== -->
	<!-- Default template of "Static" element -->
	<template Name="Static">
		<primitive Name="Caption" Type="Text">
			<color AllCorners="55 60 65 255" />
			<text Align="Center" WordWrap="Yes" />
		</primitive>
	</template>

	<!-- ============================================== -->
	<!-- Templates of the static elements based on "Static" -->

	<!-- ========================== -->
	<!-- Static text string -->
	<template Name="Label">
		<primitive Name="Caption" Type="Text">
			<color AllCorners="55 60 65 255" />
			<text WordWrap="Yes" />
		</primitive>
	</template>
	<!-- ========================== -->
	<!-- Static text string with align "Justify" -->
	<template Name="LabelJ">
		<primitive Name="Caption" Type="Text">
			<color AllCorners="55 60 65 255" />
			<text WordWrap="Yes" Align="Justify Top" />
		</primitive>
	</template>
	<!-- ========================== -->
	<!-- Static text string with bitmap font -->
	<template Name="LabelBitmap">
		<primitive Name="Background" Type="Texture_9" Margin="-3 -6">
			<state Type="Partial" Negative="InFocus | InFocusC" />
			<color AllCorners="55 60 65 255" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="0		6	8	14"
				TexY_All="72	78	80	86"
			/>
		</primitive>
		<primitive Name="Caption" Type="Text">
			<text WordWrap="Yes" Font="CandaraGlow" Align="Justify Top" />
		</primitive>
	</template>
	<!-- ========================== -->
	<!-- Static text string with right align and row spacing -->
	<template Name="LabelRRS">
		<primitive Name="Caption" Type="Text">
			<color AllCorners="55 60 65 255" />
			<text WordWrap="Yes" Align="Right Top" RowSpacing="25" />
		</primitive>
	</template>

	<!-- ========================== -->
	<!-- Imagebox -->
	<template Name="ImageBox">
		<primitive Name="Icon" Type="Icon" Width="-1" Height="-1" Align="Center" />
	</template>

	<!-- ========================== -->
	<!-- Horizontal separator -->
	<template Name="SeparatorH">
		<primitive Name="Separator" Type="Rect" Height="2" Align="Center">
			<color TopLeft="#ff94999e" TopRight="#ff94999e" BottomLeft="#ffc7cbcf" BottomRight="#ffc7cbcf" />
		</primitive>
	</template>

	<!-- ========================== -->
	<!-- Vertical separator -->
	<!-- Вертикальный разделитель -->
	<template Name="SeparatorV">
		<primitive Name="Separator" Type="Rect" Width="2" Align="Center">
			<color TopLeft="#ff94999e" BottomLeft="#ff94999e" TopRight="#ffc7cbcf" BottomRight="#ffc7cbcf" />
		</primitive>
	</template>
</AlbaLynx>