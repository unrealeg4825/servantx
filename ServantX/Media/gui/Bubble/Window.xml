<?xml version="1.0" encoding="ANSI"?>
<AlbaLynx>
	<!-- =========================================== -->
	<!-- Default template of "Window" -->
	<template Name="Window">
		<!-- Window color -->
		<primitive Name="bg_color" Type="Texture_9" Margin="0 31 0 0">
			<state Type="Partial" Negative="InFocus | InFocusC" />
			<color TopLeft="220 230 240 255" TopRight="220 230 240 255" BottomLeft="168 178 188 255" BottomRight="168 178 188 255" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="0		6	8	14"
				TexY_All="72	78	80	86"
			/>
		</primitive>
		<!-- Window color in focus -->
		<primitive Name="bg_color_focus" Type="Texture_9" Margin="0 31 0 0">
			<state Type="PartialALO" Positive="InFocus | InFocusC" />
			<color TopLeft="230 240 250 255" TopRight="230 240 250 255" BottomLeft="178 188 198 255" BottomRight="178 188 198 255" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="0		6	8	14"
				TexY_All="72	78	80	86"
			/>
		</primitive>
		<!-- The frame and the shadow -->
		<primitive Name="BorderShadow" Type="Texture_9" Margin="-6 -10 -14">
			<texture
				Image="BubbleSkin"
				Border="26 56 34 25"
				ARGB_All="#FFFFFFFF"
				TexX_All="0		25		45		101"
				TexY_All="0		26		36		70"
			/>
		</primitive>
		<!-- The title of the window -->
		<primitive Type="Dummy" Margin="-16 0 0 5" Width="-1" Height="-1">
			<primitive Name="bg_color" Type="Texture_3" Margin="2 -5 0" Height="17" Align="Center">
				<texture
					Image="BubbleSkin"
					Border="6"
					TexX_All="59	65	73	79"
					TexY_All="172		185"
				/>
			</primitive>
			<primitive Name="Caption" Type="Text" Width="-1" Height="-1">
				<color AllCorners="245 250 255 255" />
				<text Font="PT_Sans_Bold" />
			</primitive>
		</primitive>
		<!-- The header -->
		<primitive Name="Header" Type="Dummy" Zone="Rect" Width="30" Align="Right" Margin="1 1 1 0">
			<!-- The buttons on the header -->
			<primitive Name="Buttons" Type="Dummy" Margin="6 0 0" Height="-1" Collision="2">
				<!-- "Close" button -->
				<primitive Name="Button_1" Type="Dummy" Width="16" Height="16" Align="Center Top" Margin="0 0 2" Collision="2">
					<default ChildTemplate="WinButtonClose" />
				</primitive>
				<!-- "Hide" button -->
				<primitive Name="Button_4" Type="Dummy" Width="16" Height="16" Align="Center Top" Margin="0 0 2" Collision="2">
					<default ChildTemplate="WinButtonClose" />
				</primitive>
				<!-- "Minimize" button -->
				<primitive Name="Button_2" Type="Dummy" Width="16" Height="16" Align="Center Top" Margin="0 0 2" Collision="2">
					<default ChildTemplate="WinButton" ChildIcon="Right" />
				</primitive>
				<!-- "On top" button -->
				<primitive Name="Button_3" Type="Dummy" Width="16" Height="16" Align="Center Top" Margin="0 0 2" Collision="2">
					<default ChildTemplate="WinButtonTopmost" />
				</primitive>
			</primitive>
			<!-- The vertical scrollbar -->
			<primitive Name="ScrollV" Type="Dummy" Margin="3 0" Width="20" Align="Center" Collision="2">
				<default ChildTemplate="WinScrollBarV" />
			</primitive>
			<!-- Bottom right resizer -->
			<primitive Name="Resize_12" Type="Dummy" Zone="Rect" Width="12" Height="12" Margin="-2 0 0 0" Align="Bottom Right" Collision="2">
				<primitive Name="RszPassive" Type="Texture">
					<dependzone Name="Resize_12" State="passive" />
					<texture Image="BubbleSkin" XYWH="16 72 12 12" />
				</primitive>
				<primitive Name="RszActive" Type="Texture">
					<dependzone Name="Resize_12" State="active" />
					<texture Image="BubbleSkin" XYWH="16 86 12 12" />
				</primitive>
			</primitive>
		</primitive>
		<!-- Position of the menu elements -->
		<primitive Name="Menu" Type="Dummy" Margin="3 34 -6 3" Height="-1" Collision="2" />
		<!-- Position of the children elements -->
		<primitive Name="Children" Type="Dummy" Zone="Rect" Margin="3 34 3 3" Collision="2" />
		<!-- The horizontal scrollbar -->
		<primitive Name="ScrollH" Type="Dummy" Margin="-3 32 1 1" Height="26" Collision="2">
			<default ChildTemplate="ScrollBarH_Embedded" />
		</primitive>
	</template>

	<!-- =========================================== -->
	<!-- Template for window button -->
	<template Name="WinButton">
		<!-- State: Checked -->
		<primitive Name="BodyChecked" Type="Texture_9" Margin="-3">
			<state Type="Partial" Positive="Checked" Negative="Locked | Pressed" />
			<texture
				Image="BubbleSkin"
				Border="9"
				TexX_All="103	112		126		135"
				TexY_All="136	145		159		168"
			/>
		</primitive>
		<!-- Icon -->
		<primitive Name="Icon" Type="Icon" />
	</template>

	<!-- =========================================== -->
	<!-- Template for 'close' button for window -->
	<template Name="WinButtonClose">
		<!-- State: Passive -->
		<primitive Name="BodyPassive" Type="Texture" Width="14" Height="14" Align="Center">
			<state Type="Partial" Positive="None" Negative="Locked | Active | Pressed" />
			<texture Image="BubbleSkin" XYWH="29 72 14 14" />
		</primitive>
		<!-- State: Active | Pressed -->
		<primitive Name="BodyActive" Type="Texture" Width="14" Height="14" Align="Center">
			<state Type="PartialALO" Positive="Active | Pressed" Negative="Locked" />
			<texture Image="BubbleSkin" XYWH="29 88 14 14" />
		</primitive>
	</template>

	<!-- =========================================== -->
	<!-- Template for 'topmost' button for window -->
	<template Name="WinButtonTopmost">
		<!-- State: Off -->
		<primitive Name="off" Type="Texture">
			<state Type="Partial" Negative="Checked" />
			<texture Image="BubbleSkin" XYWH="167 44 20 20" />
		</primitive>
		<!-- State: On -->
		<primitive Name="on" Type="Texture">
			<state Type="Partial" Positive="Checked" />
			<texture Image="BubbleSkin" XYWH="167 110 20 20" />
		</primitive>
	</template>

	<!-- ============================================================== -->
	<!-- Default template for vertical "ScrollBar" -->
	<template Name="WinScrollBarV">
		<!-- Dscription -->
		<primitive Name="Caption" Type="Text" Width="-1" Collision="1" Margin="0 3 0 0">
			<color AllCorners="55 50 65 255" />
			<text WordWrap="Yes" Angle="-90" Align="Left Center" />
		</primitive>
		<!-- The body of the scrollbar -->
		<primitive Name="Body" Type="Dummy" Width="20" Collision="1">
			<!-- Top button -->
			<primitive Name="ButtonMin" Type="Dummy" Height="15">
				<default ChildTemplate="ScrollButtonUp" />
			</primitive>
			<!-- Bottom button -->
			<primitive Name="ButtonMax" Type="Dummy" Height="15" Align="Bottom">
				<default ChildTemplate="ScrollButtonDown" />
			</primitive>
			<!-- The track of the scrollbar -->
			<primitive Name="Track" Type="Dummy" Margin="16 0">
				<default ChildTemplate="WinSliderV" />
			</primitive>
		</primitive>
	</template>

	<!-- ======================================== -->
	<!-- Template for the slider of "ScrollBar" -->
	<template Name="WinSliderV">
		<!-- State: Passive -->
		<primitive Name="BodyPassive" Type="Texture_3v">
			<state Type="Partial" Positive="None" Negative="Locked | Active | Pressed | Checked" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="81 101"
				TexY_All="72 78 90 96"
			/>
		</primitive>
		<!-- State: Active -->
		<primitive Name="BodyActive" Type="Texture_3v">
			<state Type="Partial" Positive="Active" Negative="Locked | Pressed | Checked" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="81 101"
				TexY_All="97 103 115 121"
			/>
		</primitive>
		<!-- State: Pressed -->
		<primitive Name="BodyPressed" Type="Texture_3v">
			<state Type="Partial" Positive="Pressed" Negative="Locked" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="81 101"
				TexY_All="122 128 140 146"
			/>
		</primitive>
		<!-- State: Lock -->
		<primitive Name="BodyLock" Type="Texture_3v">
			<state Type="Partial" Positive="Locked" />
			<texture
				Image="BubbleSkin"
				Border="6"
				TexX_All="81 101"
				TexY_All="147 153 165 171"
			/>
		</primitive>
		<!-- Lines -->
		<primitive Name="Lines" Type="Texture" Width="10" Height="7" Align="Center">
			<texture Image="BubbleSkin" XYWH="17 100 10 7" />
		</primitive>
	</template>
</AlbaLynx>