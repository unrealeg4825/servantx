<?xml version="1.0" encoding="ANSI"?>
<AlbaLynx>
	<!-- ============================================================== -->
	<!-- Default template for horizontal "ScrollBar" -->
	<template Name="ScrollBarH">
		<!-- Dscription -->
		<primitive Name="Caption" Type="Text" Height="-1" Collision="2">
			<color AllCorners="55 60 65 255" />
			<text Align="Center Top"/>
		</primitive>
		<!-- The body of the scrollbar -->
		<primitive Name="Body" Type="Dummy" Height="26" Collision="2">
			<!-- Background -->
			<primitive Name="Background" Type="Texture_3">
				<texture
					Image="BubbleSkin"
					Border="6"
					TexX_1="137 137 137 137"
					TexX_2="163 163 163 163"
					TexY_1="120 126 140 146"
					TexY_2="120 126 140 146"
				/>
			</primitive>
			<primitive Type="Dummy" Height="20" Margin="3 4">
				<!-- Left button -->
				<primitive Name="ButtonMin" Type="Dummy" Width="15">
					<default ChildTemplate="ScrollButtonLeft" />
				</primitive>
				<!-- Right button -->
				<primitive Name="ButtonMax" Type="Dummy" Width="15" Align="Right">
					<default ChildTemplate="ScrollButtonRight" />
				</primitive>
				<!-- The track of the scrollbar -->
				<primitive Name="Track" Type="Dummy" Margin="0 16" />
			</primitive>
		</primitive>
	</template>

	<!-- ============================================================== -->
	<!-- Default template for vertical "ScrollBar" -->
	<template Name="ScrollBarV">
		<!-- Dscription -->
		<primitive Name="Caption" Type="Text" Width="-1" Collision="1" Margin="0 3 0 0">
			<color AllCorners="55 60 65 255" />
			<text Angle="-90" Align="Left Center" />
		</primitive>
		<!-- The body of the scrollbar -->
		<primitive Name="Body" Type="Dummy" Width="26" Collision="1">
