					Image="BubbleSkin"
					Border="6"
					TexX_All="137 163"
					TexY_All="120 126 140 146"
				/>
			</primitive>
			<primitive Type="Dummy" Width="20" Margin="4 3">
				<!-- Top button -->
				<primitive Name="ButtonMin" Type="Dummy" Height="15">
					<default ChildTemplate="ScrollButtonUp" />
				</primitive>
				<!-- Bottom button -->
				<primitive Name="ButtonMax" Type="Dummy" Height="15" Align="Bottom">
